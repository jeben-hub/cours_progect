
<h2>Chapters</h2>
<% if has_edit_asses?(fanfic) %>
    <div class="btn btn-secondary" id="save-chapters-table">Save</div>
    <p><small>drug and drop to edit</small></p>
<% end %>
<div id='<%= has_edit_asses?(fanfic) ? "chapters-edit" : "chapters" %>' >
  <% fanfic.chapters.each do |chapter| %>
    <div class="card border-dark mb-1 " id="chapter" chapter-id=<%= chapter.id %>>
      <ul class="nav nav-pills">
        <li class="nav-item">
          <%= link_to chapter.name, fanfic_chapter_path(fanfic, chapter), class: "nav-link" %>
        </li>
        <% if has_access?(chapter.fanfic.user_id.to_i) %>
        <li class="nav-item">
          <%= link_to 'Edit', edit_fanfic_chapter_path(fanfic, chapter), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Destroy', fanfic_chapter_path(fanfic, chapter), class: "nav-link", method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
