<div class="card p-2">
  <h2 class="text-center">
    <%= @chapter.name %>
  </h2>


  <div class="d-flex justify-content-center">
    <img src="<%= picture(@chapter)%>" class="mr-2">
  </div>
  <p class="mr-1">
    <%= markdown(@chapter.body) %>
  </p>

  <%= render partial: 'likes/buttons', locals: { chapter: @chapter } %>

  <div class="d-flex justify-content-center">
    <div class="btn-toolbar">
      <div class="btn-group mr-2">
        <%= link_to_previos(@chapter) %>
        <% chapter_pages(@chapter).each do |page_number| %>
          <%= page_number %>
        <% end %>
        <%= link_to_next(@chapter) %>
      </div>
    </div>
  </div>
  <%= link_to t("global.back"), fanfic_path(@chapter.fanfic) %>
</div>
