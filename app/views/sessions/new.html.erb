<div class="card p-2">
  <%= form_tag sessions_path, method: :post do %>
    <div class="form-group">
      <%= label_tag t("activerecord.attributes.user.email") %>
      <%= email_field_tag :email, nil, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= label_tag t("activerecord.attributes.user.password") %>
      <%= password_field_tag :password, nil, class: 'form-control', required: true %>
    </div>
    <div class="d-flex justify-content-center">
      <%= submit_tag t("users.btn.log_in"), class: 'btn btn-primary btn-lg' %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to t("users.btn.sign_up"), sign_up_path %>
    </div>
  <% end %>
</div>
