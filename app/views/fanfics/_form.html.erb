  <div class="input">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Title" %>
  </div>

  <div class="input">
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Description", rows: 5  %>
  </div>

  <div class="input">
    <%= form.label :genre %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

  <div class="input">
    <%= form.label :all_tags %><br />
    <%= form.text_field :all_tags, id: "tags_field" %>
  </div>

  <div class="action">
    <%= form.submit t("global.forms.create") %>
  </div>
