<p>
  <strong>Title:</strong>
  <%= @fanfic.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @fanfic.description %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @fanfic.genre %>
</p>

<p>
  <strong>User:</strong>
  <%= @fanfic.user_id %>
</p>

<% @fanfic.comments.each do |comment| %>
  <h1><%= comment.user.name %></h1>
  <p><%= comment.body %></p>
  <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } if has_access?(comment.user) %>
<% end %>

<%= form_for([@fanfic, @fanfic.comments.build]) do |form| %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
