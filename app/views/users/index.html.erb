<div class="card p-2">
  <table class="tecnic footable table table-bordered toggle-arrow-tiny">
  <thead>
    <tr class="tecnic">
      <th>id</th>
      <th><%= t("activerecord.attributes.user.name") %></th>
      <th><%= t("activerecord.attributes.user.email") %></th>
      <th><%= t("users.menegment.created_at") %></th>
      <th><%= t("users.menegment.admin") %></th>
      <th><%= t("users.menegment.status") %></th>
      <th><%= t("users.menegment.block") %></th>
      <th><%= t("users.menegment.delete") %></th>
      <th><%= t("users.menegment.make_admin") %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |item| %>
    <tr class="tecnic">
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.email %></td>
      <td><%= item.created_at.to_s %></td>
      <td><%= t("users.menegment." + (item.admin? ? "admin" : "user")) %></td>
      <% unless item.admin? %>
      <td><%= t("users.menegment." + (item.blocked? ? "blocked" : "active")) %></td>
      <% if item.blocked? %>
        <td><%= link_to t("users.menegment.unblock"), unblock_user_path(item), data: { confirm: t("global.confirm") }, class: "tecnic" %></td>
      <% else %>
        <td><%= link_to t("users.menegment.block"), block_user_path(item), data: { confirm: t("global.confirm") }, class: "tecnic" %></td>
      <% end %>
      <td><%= link_to t("users.menegment.delete"), user_path(item), method: :delete, data: { confirm: t("global.confirm") }, class: "tecnic" %></td>
      <th><%= link_to t("users.menegment.make_admin"), make_admin_user_path(item), data: { confirm: t("global.confirm") }, class: "tecnic" %></th>
      <% end %>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
      <td colspan="9">
   <ul class="pagination pull-right"></ul>
      </td>
  </tr>
  </tfoot>
</div>
